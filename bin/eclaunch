#!/usr/local/bin/bash

ROOT_DIR=~/nya
COMMAND=eclipse/eclipse

while getopts ":l" opt; do
  case $opt in
    l)
      files=$(find $ROOT_DIR -type f -path *$COMMAND -maxdepth 3 -mindepth 2 | xargs )
      output=${files//$ROOT_DIR\//}
      output=${output//\/$COMMAND/}
      echo $output
      exit 0
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      ;;
  esac
done

if [ -n "$1" ]
  then
    $ROOT_DIR/$1/$COMMAND
  else
    echo No command specified >&2
    exit -1
fi
